<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.photo.pop"
        versionCode = "10"
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Photopop!</name>

    <description>
        App for doodling all over your photos. Also an adobe coding challenge.
    </description>

    <author href="https://coderica.github.io" email="esm1018@gmail.com">
        Erica Prenga
    </author>

    <!--
      If you do not want any permissions to be added to your app, add the
      following tag to your config.xml; you will still have the INTERNET
      permission on your app, which PhoneGap requires.
    -->
    <!-- <icon src="icon.png" /> -->

    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="com.synconset.imagepicker" />

    <preference name="permissions" value="none"/>
    <!-- <preference name="phonegap-version" value="2.3.0" /> -->

    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>

</widget>